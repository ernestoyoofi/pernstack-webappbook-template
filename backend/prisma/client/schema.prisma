generator client {
  provider   = "prisma-client-js"
  output     = "./client"
  engineType = "client"
}

datasource db {
  provider = "postgresql" // Postgres Database
}

model books {
  id           Int       @id @default(autoincrement()) // Primary Key
  title        String // Title Book
  description  String // Description Book
  image        String? // Image
  author       String // Author
  publisher    String? // Publisher
  language     String?   @default("Indonesia") // Language
  year_publish BigInt? // Year Publish
  total_page   BigInt? // Total Page
  url_page     String? // Page Book
  created_at   DateTime  @default(now()) @db.Timestamptz // For Create
  updated_at   DateTime  @updatedAt @db.Timestamptz // For Update
  deleted_at   DateTime? @db.Timestamptz // For Soft Delete
}
